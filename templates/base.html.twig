<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DB Auto Pneus{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/grid.css') }}">
        <link rel="stylesheet" href="{{ asset('build/style.css') }}">
        <link rel="stylesheet" href="{{ asset('build/reset.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="main-bg">
            <div class="bg">
                <header>
                    <div class="main">
                        <div class="wrapper">
                            <div class="fright">
                                <div class="indent"> 
                                    <span class="address">DB Auto Pneus Saint-savournin</span> 
                                    <span class="phone">06 40 19 75 89</span> 
                                </div>
                            </div>
                        </div>
                        {{ include('navbar.html.twig') }}
                    </div>
                </header>
                <section id=content">
                    <div class="main">
                        <div class="container_12">
                            <div class="wrapper p5">
                                {% block body %}{% endblock %}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        {{ include('footer.html.twig') }}
        {{ include('core/modal.html.twig') }}
        {% block javascripts %}{% endblock %}
        <script src="{{ asset('build/jquery.js') }}"></script>
        <script src="{{ asset('build/contact.js') }}"></script>
        <script src="{{ asset('build/rating.js') }}"></script>
    </body>
</html>
